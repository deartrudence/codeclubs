  <p id="notice"><%= notice %></p>
<% end %>
<div class="home--wrap">
	<main>
		<div class="wrapper as--landing-page">

			<h1><%= t('pages.intro-1')%></h1>
			<p><%= t('pages.intro-2')%></p>
		</div>
		<div class="wrapper--flex wrapper button-boxes">
			<%= link_to about_path do%>
				<h2><%= t('pages.get-started')%></h2>
