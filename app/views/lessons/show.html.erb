<%if notice.present?%>
  <p id="notice"><%= notice %></p>
<% end %>  

<div class="wrapper wrapper--flex wrapper--flex-wrap lesson--level-<%= @lesson.level %> as--lesson-wrapper">
  <div class="lesson--single-title-bar">
    <h2 class="as--no-top-margin"><%= @lesson.title %></h2>
    <h4 class="font-quicksand as--no-top-margin"><% if @lesson.grade.present?%>Grade <%= @lesson.grade_list%> â€¢ <% end %><%= @lesson.duration_in_minutes%> Minutes</h4>
    <h3 class="font-quicksand as--no-top-margin">Created by <%= link_to @lesson.author, profile_path(@lesson.user.profile)%> on <%= @lesson.format_date(@lesson.created_at)%></h3>
  </div>
  <div class="lesson--single-title-img" style="background-image: url(<%= @lesson.feature_image.url(:medium) %>)"></div>
  <nav class="lesson--nav">
    <p>Jump to:</p>
    <ul>
      <li><a href="#introduction">Introduction</a></li>
      <li><a href="#prep-work">Prep Work</a></li>
      <li><a href="#the-lesson">The Lesson</a></li>
      <li><a href="#extensions">Extensions</a></li>
      <li><a href="#answers">Answers</a></li>
      <li><a href="#suggested-lessons">Suggested Lessons</a></li>
    </ul>
  </nav>
  <nav class="lesson--share">
    test
  </nav>
  <div class="lesson--single-text">
    <section>
      <h3 class="lesson--section-title" id="introduction">Introduction</h3>
      <div class="text-edit hidden">
        <%= @lesson.description.html_safe%>
      </div>
    </section>
    <% if @lesson.prep.present? %>
      <section>
        <h3 class="lesson--section-title" id="prep-work">Prep Work</h3>
        <div class="text-edit hidden">
          <%= @lesson.prep.html_safe %>
        </div>
      </section>
    <% end %>
    <section> 
      <h3 class="lesson--section-title" id="the-lesson">The Lesson</h3>
      <div class="text-edit hidden">
        <%= @lesson.content.html_safe %>
      </div>
    </section>
    <% if @lesson.extensions.present? %>
      <section>
        <h3 class="lesson--section-title" id="extensions">Extensions</h3>
        <div class="text-edit hidden">
          <%= @lesson.extensions.html_safe %>
        </div>
      </section>
    <% end %>
    <% if @lesson.answers.present? %>
      <section> 
        <h3 class="lesson--section-title" id="answers">Answers</h3>
        <div class="text-edit hidden">
          <%= @lesson.answers.html_safe %>
        </div>
      </section>
    <% end %>
    <% if @lesson.video_link.present?%>
        <%= @lesson.video_link.html_safe %>
    <% end %>
    <% if @lesson.file_upload.file? %>
      <%= link_to 'download additional materials', @lesson.file_upload.url, target: '_blank', class: 'button button--secondary' %>
    <% end %>
    <% if @lesson.suggested_lessons.present? %>
      <h3 class="lesson--section-title" id="suggested-lessons">Suggested Lessons</h3>
      <ul> 
        <% @lesson.suggested_lessons.each do |sug_lesson|%>
          <% if sug_lesson.suggested_lesson_id > 0%>
            <% the_lesson = Lesson.where(id: sug_lesson.suggested_lesson_id.to_i).first%>
              <li><%= link_to the_lesson.title, lesson_path(the_lesson) %></li>
          <% end %>
        <% end %> 
      </ul>
    <% end %>
  </div>
  <div class="sidebar">
    <!-- <%= image_tag @lesson.feature_image.url(:medium) %> -->
    <div class="sidebar--text word-wrap">
      <ul class="list--tags">
        <li class="title">Subjects:</li>
        <% @lesson.subject_list.each do |subject| %>
          <li><%= subject %></li>
        <% end %>
      </ul>
      <ul class="list--tags">
        <li class="title">Programming Concepts:</li>
        <% @lesson.code_concept_list.each do |code_concept| %>
          <li><%= code_concept %></li>
        <% end %>
      </ul>
      <% if @lesson.curriculum_concepts.present? %>
        <h3>Key Curriculum Concepts</h3>
        <div class="text-edit">
          <%= @lesson.curriculum_concepts.html_safe %>
        </div>
      <% end %>

      <% if @lesson.programming_concepts.present? %>
        <h3>Key Coding Concepts</h3>
        <div class="text-edit">
          <%= @lesson.programming_concepts.html_safe %>
        </div>
      <% end %>

      
      <% if @lesson.references.present? %>
        <h3>References</h3>
        <div class="text-edit">
          <%= @lesson.references.html_safe %>
        </div>
      <% end %>

    </div>
  </div>
</div>
<br>
