<div class="wrapper--small">
  <h2>Sign in</h2>
  <div class="as--profile-wrapper form--profile">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= f.label :email, class: 'required'%>
      <%= f.input_field :email, autofocus: true, placeholder: 'Enter your mail address.' %>
      <%= f.label :password, class: 'required' %>
      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'link--underlined link--underlined-small' %>
      <% end -%>
      <%= f.input_field :password, placeholder: 'Enter your password' %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>

      <div class="form-actions">
        <%= f.submit "Log in", class: 'button button--primary' %>
        <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
          <%= link_to "Sign up", new_registration_path(resource_name), class: 'button button--secondary' %>
        <% end -%>
      </div>
    <% end %>
    <p class="internal right"><span class="required"></span> =Required Field</p>
  </div>
</div>
