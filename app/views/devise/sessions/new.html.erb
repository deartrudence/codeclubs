<div class="wrapper--small">
	<h2><%= t(".sign_in") %></h2>
	<div class="as--profile-wrapper form--profile">
		<%=devise_error_messages!%>
		<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
			<%= f.error_notification %>
		  	<%= f.label :email, class: 'required'%>
		    <%= f.input_field :email, required: false, autofocus: true %>
		    <%= f.label :password, class: 'required' %>
		    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
		            <%= link_to t('devise.common.forgot_your_password?'), new_password_path(resource_name), class: 'link--underlined link--underlined-small' %>
		    <% end -%>
		    <%= f.input_field :password, required: false %>
		    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>

		  <div class="form-actions">
		    <%= f.button :submit, t("devise.common.sign_in"), class:'button button--primary' %>
		    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
		      <%= link_to t("devise.common.sign_up"), new_registration_path(resource_name), class: 'button button--secondary' %><br />
		    <% end -%>
		  </div>
		<% end %>
		<p class="internal right"><span class="required"></span> =<%= t('dictionary.required-field')%></p>
	</div>
</div>
