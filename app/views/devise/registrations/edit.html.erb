<div class="wrapper--small">
  
  <h2><%= t(".title", resource: resource_class.model_name.human) %></h2>
  <div class="as--profile-wrapper form--profile">
    
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>
    
    <%= f.label :email, class: 'required'%>
    <%= f.input_field :email, required: true, autofocus: true %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p><%= t(".currently_waiting_confirmation_for_email", email: resource.unconfirmed_email) %></p>
    <% end %>
  
    <%= f.label :password, class: 'required'%>
    <%= f.input_field :password, autocomplete: "off", hint: t(".leave_blank_if_you_don_t_want_to_change_it"), required: false, label_html: { class: 'my_class' } %>
    <%= f.label :password_confirmation, class: 'required'%>
    <%= f.input_field :password_confirmation, required: false, class: 'required' %>

    <%= f.label :current_password, class: 'required'%>
    <%= f.input_field :current_password, hint: t(".we_need_your_current_password_to_confirm_your_changes"), required: true, label_html: { class: 'my_class' } %>
      <!-- </div> -->

      <div class="form-actions">
        <%= f.button :submit, t(".update") %>
      </div>
    <% end %>

    <h3><%= t(".cancel_my_account") %></h3>

    <p><%= t(".unhappy") %> <%= link_to t(".cancel_my_account"), registration_path(resource_name), data: { confirm: t(".are_you_sure") }, method: :delete %></p>

    <%= link_to t("devise.shared.links.back"), :back %>
  </div>

  
</div>
