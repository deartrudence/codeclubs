<div class="wrapper--small as--profile-show">
  <h2>My Profile</h2>
  <div class="as--profile-wrapper wrapper--flex">
    <div> 
      <ul class="list--profile-info">
        <li><span>Name:</span> <%= @profile.name %></li>
        <li><span>School:</span> <%= @profile.school %></li>
        <li><span>Grades:</span> <%= @profile.grade%></li>
      </ul>
      <%= link_to 'Edit Profile', edit_profile_path, class: 'button button--secondary'%>
      <%= link_to 'Create New Lesson', new_lesson_path, class: 'link--underlined'%>
    </div>
    <%= image_tag current_user.profile.avatar.url ? current_user.profile.avatar.url(:thumbnail) : '' %>
  </div>
</div>
