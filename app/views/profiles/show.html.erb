<p id="notice"><%= notice %></p>

<div class="wrapper center">
  <%= image_tag @profile.avatar.url(:thumbnail), class: 'as--profile-avatar' %>
  <h3><%= link_to @profile.name, edit_profile_path(@profile) %></h3>
  <h4>grade: <%= @profile.grade %></h4>
  <h4>school: <%= @profile.school %></h4>
</div>

<div class="wrapper wrapper--flex">
<% if @lessons.present? %>
  <% @lessons.each do |lesson| %>
    <div class="lesson col--two lesson--level-<%= lesson.level %>">
      <div class="lesson--bar">
        <% lesson.grade_list.each do |grade| %>
        <span>Grade :  <%= grade %></span>
        <% end %>
      </div>
      <% if lesson.level == 2 %>
        <div class="lesson--title" style="background-image: linear-gradient(to right, rgba(69, 69, 131, 0.85) 0%, rgba(69, 69, 131, 0.6) 59%, rgba(69, 69, 131, 0.5)100%), url(<%= lesson.feature_image.url %>)">
      <% elsif lesson.level == 3 %>
      <div class="lesson--title" style="background-image: linear-gradient(to right, rgba(93, 88, 129, 0.85) 0%, rgba(93, 88, 129, 0.6) 59%, rgba(93, 88, 129, 0.5) 100%), url(<%= lesson.feature_image.url %>)">
      <% elsif lesson.level == 4 %>
        <div class="lesson--title" style="background-image: linear-gradient(to right, rgba(0, 117, 86, 0.85) 0%, rgba(0, 117, 86, 0.6) 59%, rgba(0, 117, 86, 0.5) 100%), url(<%= lesson.feature_image.url %>)">
      <% else %>
        <div class="lesson--title" style="background-image: linear-gradient(to right, rgba(0, 160, 118, 0.85) 0%, rgba(0, 160, 118, 0.6) 59%, rgba(0, 160, 118, 0.5) 100%), url(<%= lesson.feature_image.url %>)">
      <% end %>
        <span>
          <p>Time: <%= lesson.duration_in_minutes %></p>
          <p>Level: <%= lesson.level%></p>
        </span>
        <h2><%= lesson.title %></h2>
      </div>

      <div class="lesson--short-description">
        <p><%= lesson.short_description %></p>
        <%= link_to 'Edit', edit_lesson_path(lesson), class: 'button button--primary' %>

      </div>
    </div>

  <% end %>
<% else %>
  <p>You haven't made any lessons yet.  Create one <%= link_to 'here', new_lesson_path %></p>
<% end %>



