<div class="wrapper">
	<h1 class="as--admin-title">My Lesson Dashboard</h1>
  <ul class="tabs wrapper--flex">
    <li class="tab-link" data-tab="drafts-tab">Drafts</li>
    <li class="tab-link" data-tab="submitted-tab">Submitted</li>
    <li class="tab-link" data-tab="bookmarked-tab">Bookmarked Lessons</li>
  </ul>
  <div class="tab-content" id="drafts-tab">
    <% if @lesson_drafts.present? %>
      <div class="list--header list--header-drafts flex--wrapper">
        <div>
          <%= form_tag(my_lesson_dashboard_path, method: :get, remote: true) do %>
            <%= label :lesson_title, 'Lesson Title' %>
            <%= check_box :lesson_title, 'Lesson Title', :onchange => "ajaxSubmit(this.form)", class: 'hidden' %>
            <%= hidden_field :draft_filters, 'filter_options' %>
          <% end %>
        </div>
        <div>Grade</div>
        <div>Subjects</div>
        <div>Concepts</div>
        <div>
          <%= form_tag(my_lesson_dashboard_path, method: :get, remote: true) do %>
            <%= label :lesson_updated, 'Updated' %>
            <%= check_box :lesson_updated, 'Updated', :onchange => "ajaxSubmit(this.form)", class: 'hidden' %>
            <%= hidden_field :draft_filters, 'filter_options' %>
          <% end %> 
        </div>  
      </div>
      <div id="drafts-tab-content">
        <%= render 'lesson_drafts', locals: {lessons: @lesson_drafts}%>
      </div>
    <% end %>
  </div>
  <div class="tab-content" id="submitted-tab">
    <% if @lesson_submitted.present? %>
      <div class="list--header list--header-submitted flex--wrapper">
        <div>
         Status
        </div>
        <div>Verified?</div>
        <div>
          <%= form_tag(my_lesson_dashboard_path, method: :get, remote: true) do %>
            <%= label :submitted_lesson_title, 'Lesson Title' %>
            <%= check_box :submitted_lesson_title, 'Lesson Title', :onchange => "ajaxSubmit(this.form)", class: 'hidden' %>
            <%= hidden_field :submitted_filters, 'filter_options' %>
          <% end %>
        </div>
        <div>Grade</div>
        <div>Subjects</div> 
        <div>
          <%= form_tag(my_lesson_dashboard_path, method: :get, remote: true) do %>
            <%= label :submitted_lesson_updated, 'Updated' %>
            <%= check_box :submitted_lesson_updated, 'Updated', :onchange => "ajaxSubmit(this.form)", class: 'hidden' %>
            <%= hidden_field :submitted_filters, 'filter_options' %>
          <% end %> 
        </div> 
      </div>
      <div id="submitted-tab-content">
        <%= render 'lesson_submitted', locals: {lessons: @lesson_submitted}%>
      </div>
    <% end %>
  </div>
 
  <div class="tab-content" id="bookmarked-tab">
  <% if @lesson_bookmarked.present? %>
    <div class="list--header list--header-bookmarked flex--wrapper">
      <div>
       Lesson Title
      </div>
      <div>Author</div>
      <div>Grade</div>
      <div>Subjects</div> 
      <div>Updated</div>
      <div>Remove?</div> 
    </div>
    <div id="bookmarked-tab-content">
      <%= render 'lesson_bookmarked', locals: {lessons: @lesson_bookmarked}%>
    </div>
  <% else %>
    <p>You haven't added any favourites yet.  Add one <%= link_to 'here', lessons_path %></p>
  <% end %>
  </div>
</div>



